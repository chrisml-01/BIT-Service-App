<UserControl x:Class="BIT_Service_Ver2.UserControls.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIT_Service_Ver2.UserControls"
             mc:Ignorable="d" 
              Height="36.53" Width="241.112">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="19" Margin="5,8,0,0" TextWrapping="Wrap" Text="{Binding Input}" VerticalAlignment="Top" Width="150"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="160,8,0,0" VerticalAlignment="Top" Width="75" Background="#FF17242A" Foreground="White" BorderThickness="0" Command="{Binding Search}"/>

    </Grid>
</UserControl>
